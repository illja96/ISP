@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right" style="padding-top: 5px;">
            @if (User.IsInRole("Administrator"))
            {
                @Html.ActionLink("Административная панель", "Index", "Admin", null, new { @class = "btn btn-primary" })
            }
            @if (User.IsInRole("Support"))
            {
                @Html.ActionLink("Панель поддержки", "Index", "AdminUser", null, new { @class = "btn btn-primary" })
            }
            @if (User.IsInRole("Subscriber"))
            {
                @Html.ActionLink("Личный кабинет", "Index", "Manage", null, new { @class = "btn btn-primary" })
            }

            <input type="submit" class="btn btn-warning" value="Выйти" />
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right" style="padding-top: 5px;">
        @Html.ActionLink("Войти", "Login", "Account", null, new { @class = "btn btn-primary", id = "loginLink" })
    </ul>
}
