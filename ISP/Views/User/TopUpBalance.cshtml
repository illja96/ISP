@{
    ViewBag.Title = "Пополнение счёта";
}

@using (Html.BeginForm("TopUpBalance", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        <label class="col-md-2 control-label">Сумма</label>
        <div class="col-md-10">
            <input type="number" min="0" value="100" class="form-control" name="amount" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Пополнить" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}